# IceWM configuration file for use during installation

# Hide taskbar
ShowTaskBar=0

# Hide titlebar buttons and window menu
TitleButtonsLeft=""
TitleButtonsRight=""
WinMenuItems=""

# Enable Alt+Tab
QuickSwitch=1
KeySysSwitchNext="Alt+Tab"
KeySysSwitchLast="Alt+Shift+Tab"

# Disable Windows key
Win95Keys=0

# Colors
ColorActiveTitleBar="rgb:ee/ee/ee"
ColorNormalTitleBar="rgb:dd/dd/dd"
ColorNormalBorder="rgb:bb/bb/bb"
ColorActiveBorder="rgb:bb/bb/bb"
ColorNormalTitleBarText="rgb:33/33/33"
ColorActiveTitleBarText="rgb:33/33/33"

# Borders
BorderSizeX=1
BorderSizeY=1
DlgBorderSizeX=1
DlgBorderSizeY=1

